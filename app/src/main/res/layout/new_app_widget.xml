
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppWidgetSimple.AppWidgetContainer"
    style="@style/Widget.AppWidgetSimple.AppWidget.Container"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/section_id"
    style="style/AppWidgetLabel"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/appwidget_id_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="style/AppWidgetLabel"
        android:layout_weight="2"

        android:contentDescription="@string/widget_id_label"
        android:text="@string/widget_id_label"
        android:textSize="24sp"
        android:textStyle="bold|italic"

        />
    <TextView
        android:id="@+id/appwidget_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/appwidget_text"
        android:text="XX"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textStyle="bold|italic"

        />



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_update"
        style="@style/AppWidgetSection"
        android:orientation="vertical"
        android:layout_below="@+id/section_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:id="@+id/appwidget_update_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppWidgetLabel"
            android:text="@string/widget_update_label"
            android:layout_marginBottom="2dp"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/appwidget_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppWidgetText"
            />
        <TextView
            android:id="@+id/appwidget_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppWidgetText"
            />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_update"
        style="@style/AppWidgetButton"
        android:layout_below="@+id/section_update"
        android:layout_centerHorizontal="true"
        android:text="@string/widget_button_update"
        />

    />
</RelativeLayout>
